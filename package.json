{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna exec -- yarn --mutex network --frozen-lockfile && lerna link --force-local",
    "bootstrap-ci": "NODE_ENV=production yarn bootstrap",
    "build": "lerna run build",
    "regenerate-lockfiles": "lerna run clean && rm -r packages/*/yarn.lock && yarn exec -- yarn --mutex network",
    "core:test": "cd packages/core && yarn build && yarn test",
    "run:chat": "lerna exec --scope @hoprnet/hopr-chat -- yarn start:basodino",
    "run:hoprd": "lerna exec --scope @hoprnet/hoprd -- yarn start --host 0.0.0.0:9092",
    "run:chatbot": "lerna exec --scope @hoprnet/chat-bot -- yarn start:basodino",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "lerna run test --stream",
    "new:install": "lerna exec --concurrency 1 -- yarn --pure-lockfile",
    "new:install:parallel": "lerna exec -- yarn --pure-lockfile"
  },
  "dependencies": {
    "lerna": "^3.22.1"
  },
  "devDependencies": {
    "prettier": "^2.0.5",
    "husky": "^4.2.5"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none"
  }
}
