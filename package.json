{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "lerna bootstrap",
    "build": "yarn util:build",
    "build:core": "lerna exec --scope @hoprnet/hopr-core yarn build",
    "build:admin": "lerna exec --scope @hoprnet/hoprd yarn buildAdmin",
    "lint": "npx prettier --check .",
    "lint:fix": "npx prettier --write .",
    "test": "lerna run test --stream",
    "test:core": "yarn build:core && lerna exec --scope @hoprnet/hopr-core yarn test",
    "run:network": "lerna exec --scope @hoprnet/hopr-ethereum -- yarn network --network hardhat",
    "run:hoprd:bootstrap": "lerna exec --scope @hoprnet/hoprd -- yarn dev --provider $PROVIDER --password='' --data $DATABASE --runAsBootstrap",
    "run:hoprd:alice": "lerna exec --scope @hoprnet/hoprd -- yarn dev --host=0.0.0.0:9092 --adminPort=3010 --restPort=3011 --provider $PROVIDER --password='' --data $DATABASE --bootstrapServers $BOOTSTRAP",
    "run:hoprd:bob": "lerna exec --scope @hoprnet/hoprd -- yarn dev --host=0.0.0.0:9093 --adminPort=3020 --restPort=3021 --provider $PROVIDER --password='' --data $DATABASE --bootstrapServers $BOOTSTRAP",
    "util:clean": "lerna exec --stream -- rimraf node_modules/@hoprnet",
    "util:reset": "lerna clean --yes",
    "util:build": "lerna exec --stream -- yarn build",
    "util:link": "lerna link"
  },
  "dependencies": {
    "lerna": "^4.0.0"
  },
  "devDependencies": {
    "rimraf": "^3.0.2"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none"
  }
}
