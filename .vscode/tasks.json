{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build",
            "type": "shell",
            "command": "/nix/var/nix/profiles/default/bin/nix",
            "args": [
                "develop",
                "-c",
                "cargo",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cargo test",
            "type": "shell",
            "command": "/nix/var/nix/profiles/default/bin/nix",
            "args": [
                "develop",
                "-c",
                "cargo",
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}