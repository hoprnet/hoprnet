{
  // Base tsconfig file to define common settings such as
  // compile target and compiler options
  "ts-node": {
    // No need to check types again after running 'yarn build'
    "transpileOnly": true
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ES2021", "dom"],
    "target": "ES2021",
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true
  }
}
