{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ES2020", "dom"],
    "module": "commonjs",
    "target": "ES2020",
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
