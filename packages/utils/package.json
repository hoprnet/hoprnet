    "it-pipe": "^1.1.0",
    "leveldown": "^6.0.0",
    "levelup": "^5.0.0",
    "libp2p": "0.31.5",
    "libp2p-crypto": "0.19.4",
    "memdown": "^6.0.0",
    "multiaddr": "9.0.1",
    "multihashes": "~4.0.1",
    "peer-id": "0.14.8",
    "secp256k1": "^4.0.2",
    "strip-ansi": "^7.0.0"
