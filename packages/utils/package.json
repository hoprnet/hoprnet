{
  "name": "@hoprnet/hopr-utils",
  "homepage": "https://hoprnet.org",
  "description": "HOPR-based utilities to process multiple data structures",
  "version": "1.17.0-alpha.58",
  "repository": "git@github.com:hoprnet/hopr-utils.git",
  "license": "LGPL-3.0-only",
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf ./lib",
    "test": "mocha --parallel",
    "dev": "yarn clean && tsc -w",
    "build": "yarn clean && tsc -p . --noEmit false",
    "prepare": "yarn build"
  },
  "files": [
    "lib/",
    "!lib/**/*.spec.*",
    "README.md",
    "package.json",
    "yarn.lock"
  ],
  "engines": {
    "node": ">=12.9.1",
    "yarn": ">=1.19.2"
  },
  "dependencies": {
    "bignumber.js": "^9.0.0",
    "libp2p-crypto": "^0.17.9",
    "peer-info": "^0.17.5",
    "strip-ansi": "^6.0.0",
    "typestub-multihashes": "^0.0.4"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "@types/node": "^12.12.8",
    "husky": "^4.2.5",
    "lint-staged": ">=10",
    "mocha": "^8.0.1",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/**/*.spec.ts",
    "require": "ts-node/register"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": "prettier --write"
  }
}
