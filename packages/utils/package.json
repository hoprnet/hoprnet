{
  "name": "@hoprnet/hopr-utils",
  "description": "HOPR-based utilities to process multiple data structures",
  "version": "1.89.0-next.30",
  "repository": "https://github.com/hoprnet/hoprnet.git",
  "homepage": "https://hoprnet.org",
  "license": "GPL-3.0",
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "type": "module",
  "scripts": {
    "clean:wasm": "make -C crates clean",
    "build:wasm": "make -C crates all && make -C crates install",
    "test:wasm": "make -C crates test",
    "clean": "yarn clean:wasm && rm -Rf ./lib ./tsconfig.tsbuildinfo",
    "test": "yarn test:wasm && mocha --parallel",
    "dev": "yarn clean && yarn build:wasm && tsc -w",
    "build": "yarn clean && yarn build:wasm && tsc -p .",
    "docs:generate": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "engines": {
    "node": ">=16.15"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "abort-controller": "~3.0.0",
    "bignumber.js": "9.0.2",
    "bn.js": "5.2.0",
    "chalk": "5.0.1",
    "debug": "4.3.4",
    "ethers": "5.5.4",
    "futoin-hkdf": "1.5.0",
    "hjson": "3.2.2",
    "it-pipe": "2.0.3",
    "jsonschema": "1.4.0",
    "leveldown": "6.1.1",
    "levelup": "5.1.1",
    "libp2p-crypto": "0.21.2",
    "memdown": "6.1.1",
    "multiaddr": "10.0.1",
    "multiformats": "^9.4.5",
    "multihashes": "4.0.3",
    "peer-id": "0.16.0",
    "secp256k1": "4.0.3"
  },
  "devDependencies": {
    "@chainsafe/libp2p-noise": "5.0.3",
    "@types/mocha": "9.1.0",
    "bl": "5.0.0",
    "chai": "4.3.6",
    "libp2p": "0.36.2",
    "libp2p-kad-dht": "0.28.6",
    "libp2p-mplex": "0.10.7",
    "libp2p-tcp": "0.17.2",
    "mocha": "9.2.2",
    "rewiremock": "3.14.3",
    "sinon": "12.0.1",
    "typedoc": "0.22.13",
    "typedoc-plugin-markdown": "3.11.14"
  },
  "mocha": {
    "spec": "lib/**/*.spec.js"
  }
}
