{
  "extends": "@tsconfig/node12/tsconfig.json",

  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./lib",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "target": "es2019",
    "declaration": true,
    "sourceMap": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./**/*.ts"]
}
