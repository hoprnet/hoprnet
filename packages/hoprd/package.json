{
  "name": "@hoprnet/hoprd",
  "version": "1.91.0-next.18",
  "description": "",
  "repository": "https://github.com/hoprnet/hoprnet.git",
  "homepage": "https://hoprnet.org",
  "license": "LGPL-3.0-only",
  "types": "lib/main.d.cts",
  "type": "module",
  "main": "lib/main.cjs",
  "bin": "lib/main.cjs",
  "files": [
    "lib",
    "npm-shrinkwrap.json",
    "hopr-admin/.next/**",
    "hoprd-default.sh",
    "releases.json",
    "default-environment.json",
    "rest-api-v2-spec.yaml"
  ],
  "engines": {
    "node": ">=16.15"
  },
  "scripts": {
    "clean:wasm": "make -C crates clean",
    "build:wasm": "make -C crates all && make -C crates install",
    "test:wasm": "make -C crates test",
    "clean": "yarn clean:wasm && rm -Rf ./lib ./tsconfig.tsbuildinfo ./build ./rest-api-v2-full-spec.json",
    "build": "yarn clean && yarn build:wasm && tsc -p . && yarn buildAdmin && chmod u+x lib/*.js",
    "buildAdmin": "HOPRD_GIT_COMMIT=$(git rev-parse --short HEAD) next build hopr-admin",
    "test": "yarn test:wasm && NODE_OPTIONS=\"--experimental-wasm-modules\" mocha --reporter=tap --full-trace --exit . test && yarn testAdmin",
    "testAdmin": "cd hopr-admin && NODE_OPTIONS=\"--experimental-wasm-modules\" mocha --require ts-node/register ./**/*.spec.ts",
    "prebuild": "next telemetry disable",
    "start": "NODE_OPTIONS=\"--experimental-wasm-modules\" node lib/main.cjs --admin --init --api",
    "dev": "NODE_ENV=development yarn start --environment hardhat-localhost --password='local' --announce --testUseWeakCrypto --testAnnounceLocalAddresses --testPreferLocalAddresses --testNoAuthentication",
    "devAdmin": "NODE_OPTIONS=\"--experimental-wasm-modules\" next dev hopr-admin",
    "docs:generate": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "dependencies": {
    "@hoprnet/hopr-core": "workspace:packages/core",
    "@hoprnet/hopr-real": "workspace:packages/real",
    "@hoprnet/hopr-utils": "workspace:packages/utils",
    "@libp2p/interface-peer-id": "1.0.5",
    "@libp2p/peer-id": "1.1.16",
    "@multiformats/multiaddr": "10.3.3",
    "bn.js": "5.2.0",
    "body-parser": "1.19.2",
    "cookie": "0.4.2",
    "cors": "2.8.5",
    "debug": "4.3.4",
    "ethers": "5.7.0",
    "express": "4.17.3",
    "express-openapi": "12.0.1",
    "jazzicon": "1.5.0",
    "js-cookie": "3.0.1",
    "next": "12.2.3",
    "prop-types": "15.7.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rlp": "3.0.0",
    "semver": "7.3.7",
    "swagger-ui-express": "4.3.0",
    "tiny-hashes": "1.0.1",
    "trace-unhandled": "2.0.1",
    "ws": "8.3.0",
    "yargs": "17.5.1"
  },
  "devDependencies": {
    "@types/chai": "4.3.3",
    "@types/cors": "2.8.12",
    "@types/js-cookie": "^3.0.1",
    "@types/mocha": "9.1.1",
    "@types/react": "^17.0.2",
    "@types/supertest": "^2.0.11",
    "@types/yargs": "17.0.10",
    "chai": "4.3.6",
    "chai-openapi-response-validator": "^0.14.2",
    "mocha": "9.2.2",
    "sinon": "12.0.1",
    "supertest": "^6.2.2",
    "ts-node": "^10.9.1",
    "typedoc": "0.23.2",
    "typedoc-plugin-markdown": "3.13.1",
    "typescript": "4.7.4"
  },
  "mocha": {
    "spec": "lib/**/*.spec.js"
  },
  "publishConfig": {
    "access": "public"
  }
}
