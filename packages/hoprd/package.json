{
  "name": "@hoprnet/hoprd",
  "version": "1.76.0-next.5",
  "description": "",
  "repository": "https://github.com/hoprnet/hoprnet.git",
  "homepage": "https://hoprnet.org",
  "license": "LGPL-3.0-only",
  "main": "lib/index.js",
  "author": "Peter Braden (HOPR) <peter.braden@hoprnet.org>",
  "bin": {
    "hoprd": "lib/index.js"
  },
  "files": [
    "lib",
    "hopr-admin/.next",
    "hoprd-default.sh"
  ],
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "yarn clean && tsc --project ./tsconfig.json && yarn buildAdmin && chmod u+x lib/*.js",
    "buildAdmin": "next build hopr-admin",
    "test": "node --trace-warnings --unhandled-rejections=strict ../../node_modules/.bin/mocha --reporter=tap --full-trace --exit . test",
    "prebuild": "next telemetry disable",
    "prepublishOnly": "yarn build",
    "start": "node lib/index.js --admin --init --rest",
    "dev": "yarn build && NODE_ENV=development yarn start",
    "docs:generate": "yarn typedoc",
    "docs:watch": "yarn typedoc --watch"
  },
  "dependencies": {
    "@ceramicnetwork/http-client": "^1.0.6",
    "@ceramicnetwork/stream-tile": "^1.0.6",
    "@hoprnet/hopr-core": "1.76.0-next.5",
    "@hoprnet/hopr-utils": "1.76.0-next.4",
    "body-parser": "^1.19.0",
    "bs58": "^4.0.1",
    "check-password-strength": "^2.0.3",
    "cookie": "^0.4.1",
    "dids": "^2.1.0",
    "ethereumjs-wallet": "^1.0.1",
    "jazzicon": "^1.5.0",
    "js-cookie": "^3.0.0",
    "key-did-provider-ed25519": "^1.1.0",
    "key-did-resolver": "^1.2.1",
    "next": "^11.0.0",
    "peer-id": "0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "restana": "^4.8.0",
    "rlp": "^2.2.6",
    "run-queue": "^2.0.1",
    "strip-ansi": "6.0.0",
    "tiny-hashes": "^1.0.1",
    "yargs": "^17.0.0"
  },
  "devDependencies": {
    "@types/bs58": "^4.0.1",
    "@types/debug": "^4.1.5",
    "@types/mocha": "^9.0.0",
    "@types/node": "16.4.1",
    "@types/yargs": "^17.0.0",
    "mocha": "^9.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.1.0",
    "typedoc": "0.21.5",
    "typedoc-plugin-markdown": "3.10.4",
    "typescript": "4.3.5"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/**/*.spec.ts",
    "require": "ts-node/register"
  },
  "publishConfig": {
    "access": "public"
  }
}
