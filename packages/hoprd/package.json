{
  "name": "hopr-admin",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:hoprnet/hopr-admin.git",
  "author": "Peter Braden (HOPR) <peter.braden@hoprnet.org>",
  "scripts": {
    "build": "rm -rf ./lib && tsc --project ./tsconfig.json",
    "buildAdmin": "next build hopr-admin",
    "clean": "rm -rf ./lib",
    "test": "jest --runInBand --forceExit",
    "prepublishOnly": "yarn build",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "dev": "yarn install && yarn build && yarn buildAdmin && node lib/index.js --admin"
  },
  "license": "",
  "dependencies": {
    "@hoprnet/hopr-chat": "1.15.0",
    "@hoprnet/hopr-core": "0.6.34",
    "@hoprnet/hopr-core-connector-interface": "1.10.3",
    "@hoprnet/hopr-server": "file:../server",
    "@hoprnet/hopr-utils": "0.6.2",
    "@types/bs58": "^4.0.1",
    "@types/clear": "^0.1.0",
    "bs58": "^4.0.1",
    "jazzicon": "^1.5.0",
    "multihashes": "^3.0.1",
    "next": "^9.5.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "tiny-hashes": "^1.0.1",
    "yargs": "^15.4.1"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/lib",
      "node_modules"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
