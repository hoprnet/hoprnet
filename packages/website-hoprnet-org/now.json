{
  "version": 2,
  "scope": "hoprnet",
  "builds": [{ "src": "build/**", "use": "@now/static" }],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "s-maxage=31536000,immutable" },
      "dest": "/build/static/$1"
    },
    { "src": "/favicon.ico", "dest": "/build/favicon.ico" },
    { "src": "/asset-manifest.json", "dest": "/build/asset-manifest.json" },
    { "src": "/manifest.json", "dest": "/build/manifest.json" },
    { "src": "/precache-manifest.(.*)", "dest": "/build/precache-manifest.$1" },
    { "src": "/service-worker.js", "headers": { "cache-control": "s-maxage=0" }, "dest": "/build/service-worker.js" },
    {
      "src": "/hopr",
      "status": 301,
      "headers": { "Location": "/who-is-HOPR" }
    },
    {
      "src": "/we_are",
      "status": 301,
      "headers": { "Location": "/layer0-data-privacy" }
    },
    {
      "src": "/for_you",
      "status": 301,
      "headers": { "Location": "/do-business-with-HOPR" }
    },
    { "src": "/(.*)", "headers": { "cache-control": "s-maxage=0" }, "dest": "build/index.html" }
  ]
}
