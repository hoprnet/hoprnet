{
  "name": "@hoprnet/hopr-core-ethereum",
  "version": "1.71.0-next.103",
  "description": "",
  "repository": "https://github.com/hoprnet/hoprnet.git",
  "homepage": "https://hoprnet.org",
  "license": "GPL-3.0",
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf ./lib",
    "test": "mocha --exit",
    "dev": "yarn clean && yarn build:types && tsc -w",
    "build:types": "typechain --target ethers-v5 --outDir './src/contracts' '../../node_modules/@hoprnet/hopr-ethereum/chain/abis/*.json'",
    "build": "yarn clean && yarn build:types && mkdir -p ./lib/contracts && cp -R ./src/contracts ./lib/contracts && tsc",
    "prepublishOnly": "yarn build"
  },
  "engines": {
    "node": "14 || 15",
    "yarn": "1"
  },
  "files": [
    "lib",
    "!**/*.spec.ts",
    "!**/*.spec.d.ts",
    "!**/*.spec.js",
    "!**/*.spec.js.map"
  ],
  "dependencies": {
    "@hoprnet/hopr-ethereum": "1.71.0-next.103",
    "@hoprnet/hopr-utils": "1.71.0-next.103",
    "async-mutex": "^0.3.0",
    "bn.js": "^5.1.2",
    "chalk": "^4.1.0",
    "debug": "^4.3.1",
    "ethers": "^5.1.0",
    "heap-js": "^2.1.2",
    "multiaddr": "8.1.2",
    "peer-id": "0.14.8",
    "secp256k1": "^4.0.2"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^6.0.5",
    "@types/debug": "^4.1.5",
    "@types/levelup": "^4.3.0",
    "@types/memdown": "^3.0.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "14.14.35",
    "@types/secp256k1": "^4.0.1",
    "@types/sinon": "^9.0.10",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "it-pipe": "^1.1.0",
    "levelup": "^5.0.0",
    "memdown": "^6.0.0",
    "mocha": "^8.2.0",
    "rimraf": "^3.0.2",
    "sinon": "^10.0.0",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.0.0",
    "typechain": "^4.0.0",
    "typescript": "^4.2"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "**/*.spec.ts",
    "require": [
      "ts-node/register"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
