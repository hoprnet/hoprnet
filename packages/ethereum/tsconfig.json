{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "resolveJsonModule": true
  },
  "include": ["hardhat.config.ts", "constants.ts", "index.ts", "test", "tasks", "deploy"],
  "exclude": ["lib", "types"],
  "typedocOptions": {
    "entryPoints": ["index.ts"],
    "disableOutputCheck": true,
    "out": "docs",
    // by default we don't want links to source code to change on every change
    // when building docs for releases we can fix the revision on the cmdline
    "gitRevision": "master"
  }
}
