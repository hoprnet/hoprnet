{
  "name": "@hoprnet/hopr-ethereum",
  "version": "1.62.0-next.0",
  "description": "On-chain logic for hoprnet.org",
  "repository": "https://github.com/hoprnet/hoprnet.git",
  "license": "LGPL-3.0-only",
  "main": "./lib/index.js",
  "files": [
    "contracts/",
    "lib/",
    "!*.test.ts"
  ],
  "scripts": {
    "clean": "rimraf ./lib && rimraf ./types",
    "build": "yarn clean && yarn build:sol && tsc && cp -R ./chain/abis ./lib/chain/abis",
    "build:sol": "hardhat compile && hardhat extract",
    "fund": "hardhat fund",
    "migrate": "hardhat migrate",
    "network": "hardhat node --network hardhat",
    "test": "hardhat test --no-compile --network hardhat",
    "coverage": "hardhat coverage --network hardhat",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@hoprnet/hopr-demo-seeds": "1.62.0-next.0",
    "@hoprnet/hopr-utils": "1.62.0-next.0",
    "@nomiclabs/hardhat-etherscan": "^2.0.0",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^3.0.1",
    "@typechain/truffle-v5": "^4.0.0",
    "dotenv": "^8.2.0",
    "hardhat": "^2.0.2",
    "hardhat-typechain": "^0.3.3",
    "lodash": "^4.17.20",
    "secp256k1": "^4.0.2",
    "solidity-coverage": "^0.7.13",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.0.0",
    "type-fest": "^0.20.2",
    "typechain": "^4.0.0",
    "web3": "^1.3.0"
  },
  "devDependencies": {
    "@hoprnet/hopr-testing": "1.62.0-next.0",
    "@openzeppelin/test-helpers": "^0.5.9",
    "@types/chai": "^4.2.14",
    "@types/lodash": "^4.14.162",
    "@types/mocha": "^8.0.3",
    "@types/node": "^12",
    "@types/secp256k1": "^4.0.1",
    "chai": "^4.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1"
  },
  "engines": {
    "node": "12",
    "yarn": "1"
  }
}
