{
  "name": "@hoprnet/hopr-ethereum",
  "version": "1.75.0-next.19",
  "description": "On-chain logic for hoprnet.org",
  "repository": "https://github.com/hoprnet/hoprnet.git",
  "license": "GPL-3.0",
  "homepage": "https://hoprnet.org",
  "main": "./lib/index.js",
  "scripts": {
    "clean": "rimraf ./lib && rimraf ./types",
    "build": "yarn clean && yarn build:sol && yarn build:tsc",
    "build:sol": "hardhat compile",
    "build:tsc": "tsc && cp -R ./types/*d.ts ./lib/types/$1",
    "fund": "hardhat fund",
    "faucet": "hardhat faucet",
    "network": "DEVELOPMENT=true hardhat node",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "prepublishOnly": "yarn build",
    "docs:generate": "yarn clean && yarn build:sol && typedoc",
    "docs:watch": "typedoc --watch"
  },
  "files": [
    "contracts",
    "deployments",
    "lib",
    "!lib/test",
    "!**/*.test.ts",
    "!**/*.test.d.ts",
    "!**/*.test.js",
    "!**/*.test.js.map"
  ],
  "dependencies": {
    "@openzeppelin/contracts": "4.2.0",
    "@openzeppelin/contracts-v3-0-1": "npm:@openzeppelin/contracts@3.0.1"
  },
  "devDependencies": {
    "@hoprnet/hopr-utils": "1.75.0-next.19",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^6.0.5",
    "@typechain/hardhat": "^1.0.1",
    "@types/chai": "^4.2.15",
    "@types/lodash": "^4.14.168",
    "@types/mocha": "^9.0.0",
    "@types/node": "16.4.1",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "5.4.2",
    "hardhat": "^2.4.1",
    "hardhat-deploy": "^0.8.9",
    "hardhat-gas-reporter": "^1.0.4",
    "multiaddr": "^10.0.0",
    "rimraf": "^3.0.2",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.1.0",
    "typechain": "^4.0.3",
    "typedoc": "0.21.4",
    "typedoc-plugin-markdown": "3.10.4",
    "typescript": "4.3.5"
  },
  "engines": {
    "node": "16",
    "yarn": "1"
  }
}
