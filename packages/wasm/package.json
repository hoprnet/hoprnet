{
  "name": "@hoprnet/hopr-wasm",
  "version": "1.0.0",
  "private": true,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "engines": {
    "node": "16"
  },
  "scripts": {
    "clean:wasm": "make -C crates clean",
    "build:wasm": "make -C crates all && make -C crates install",
    "test:wasm": "make -C crates test",
    "clean": "yarn clean:wasm && rimraf ./lib ./tsconfig.tsbuildinfo ./tsconfig.spec.tsbuildinfo",
    "build": "yarn clean && yarn build:wasm && tsc -p .",
    "test": "yarn test:wasm && NODE_OPTIONS=\"--trace-warnings --unhandled-rejections=strict\" mocha --reporter=tap --full-trace"
  },
  "devDependencies": {
    "@wasm-tool/wasm-pack-plugin": "^1.1.0",
    "mocha": "9.2.2",
    "rimraf": "^3.0.0",
    "ts-node": "10.7.0",
    "typedoc": "0.22.13",
    "typedoc-plugin-markdown": "3.11.14",
    "typescript": "4.6.3",
    "wasm-pack": "0.10.2"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/**/*.spec.ts",
    "require": [
      "ts-node/register"
    ]
  }
}
