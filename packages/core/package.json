    "@types/mocha": "^8.0.3",
    "it-pair": "^1.0.0",
    "libp2p-tcp": "0.15.1",
    "memdown": "^5.1.0",
    "mocha": "^8.0.1",
    "chai": "^4.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.3"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "**/*.spec.ts",
    "require": ["ts-node/register", "test.mocha.ts"]
