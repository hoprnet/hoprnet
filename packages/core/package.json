{
  "name": "@hoprnet/hopr-core",
  "version": "1.76.0",
  "description": "Privacy-preserving messaging protocol with incentivations for relay operators",
  "repository": "https://github.com/hoprnet/hoprnet.git",
  "homepage": "https://hoprnet.org",
  "license": "GPL-3.0-only",
  "keywords": [
    "privacy",
    "web3",
    "messaging"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": "16",
    "yarn": "1"
  },
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "yarn clean && tsc -p .",
    "test": "yarn testOnce",
    "testOnce": "node --trace-warnings --unhandled-rejections=strict node_modules/.bin/mocha --reporter=tap --full-trace --exit",
    "prepublishOnly": "yarn build",
    "docs:generate": "yarn typedoc",
    "docs:watch": "yarn typedoc --watch"
  },
  "files": [
    "lib",
    "!**/*.spec.ts",
    "!**/*.spec.d.ts",
    "!**/*.spec.js",
    "!**/*.spec.js.map"
  ],
  "dependencies": {
    "@hoprnet/hopr-connect": "0.2.41",
    "@hoprnet/hopr-core-ethereum": "1.76.0",
    "@hoprnet/hopr-utils": "1.76.0",
    "abort-controller": "^3.0.0",
    "bn.js": "5.2.0",
    "chalk": "~4.1.1",
    "debug": "^4.3.2",
    "heap-js": "^2.1.6",
    "leveldown": "~6.0.0",
    "levelup": "~5.0.0",
    "libp2p": "0.32.1",
    "libp2p-kad-dht": "0.23.1",
    "libp2p-mplex": "0.10.4",
    "libp2p-noise": "^4.0.0",
    "multiaddr": "^10.0.0",
    "peer-id": "^0.15.1",
    "secp256k1": "~4.0.2"
  },
  "devDependencies": {
    "@hoprnet/hopr-ethereum": "1.76.0",
    "@types/chai-as-promised": "^7.1.3",
    "@types/debug": "^4.1.6",
    "@types/leveldown": "^4.0.3",
    "@types/levelup": "^4.3.3",
    "@types/memdown": "^3.0.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "16.4.1",
    "@types/secp256k1": "~4.0.2",
    "@types/sinon": "^10.0.2",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "libp2p-tcp": "^0.17.1",
    "memdown": "^6.0.0",
    "mocha": "^9.0.2",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.1",
    "ts-node": "^10.1.0",
    "typedoc": "0.21.6",
    "typedoc-plugin-markdown": "3.10.4",
    "typescript": "4.3.5"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/**/*.spec.ts",
    "require": [
      "ts-node/register"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
