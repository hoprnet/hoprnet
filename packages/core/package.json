{
  "name": "@hoprnet/hopr-core",
  "version": "1.67.1",
  "description": "Privacy-preserving messaging protocol with incentivations for relay operators",
  "repository": "https://github.com/hoprnet/hoprnet.git",
  "homepage": "https://hoprnet.org",
  "license": "GPL-3.0-only",
  "keywords": [
    "privacy",
    "web3",
    "messaging"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/",
    "!*.spec.ts",
    "!*.spec.d.ts",
    "!*.spec.js",
    "!*.spec.js.map"
  ],
  "engines": {
    "node": "12",
    "yarn": "1"
  },
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "yarn clean && tsc -p .",
    "test": "yarn testOnce",
    "testOnce": "node --trace-warnings --unhandled-rejections=strict node_modules/.bin/mocha --reporter=tap --full-trace --exit",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@hoprnet/hopr-connect": "0.2.9",
    "@hoprnet/hopr-core-ethereum": "1.67.1",
    "@hoprnet/hopr-utils": "1.67.1",
    "abort-controller": "^3.0.0",
    "bn.js": "5.1.2",
    "chalk": "~4.1.0",
    "debug": "^4.3.1",
    "futoin-hkdf": "~1.3.2",
    "heap-js": "^2.1.2",
    "it-pipe": "^1.1.0",
    "leveldown": "~5.6.0",
    "levelup": "~4.4.0",
    "libp2p": "0.29",
    "libp2p-crypto": "0.18.0",
    "libp2p-kad-dht": "0.20.6",
    "libp2p-mplex": "0.10.1",
    "libp2p-secio": "0.13.1",
    "multiaddr": "8.1.2",
    "multihashes": "3.1.2",
    "peer-id": "0.14.3",
    "read": "~1.0.7",
    "rlp": "~2.2.6",
    "secp256k1": "~4.0.2"
  },
  "devDependencies": {
    "@hoprnet/hopr-core-connector-interface": "1.67.1",
    "@hoprnet/hopr-demo-seeds": "1.67.1",
    "@hoprnet/hopr-ethereum": "1.67.1",
    "@hoprnet/hopr-testing": "1.67.1",
    "@types/chai-as-promised": "^7.1.3",
    "@types/debug": "^4.1.5",
    "@types/err-code": "^2.0.0",
    "@types/leveldown": "^4.0.2",
    "@types/levelup": "^4.3.0",
    "@types/memdown": "^3.0.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^12",
    "@types/read": "^0.0.28",
    "@types/secp256k1": "~4.0.1",
    "@types/sinon": "^9.0.8",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "libp2p-tcp": "0.15.2",
    "memdown": "^5.1.0",
    "mocha": "^8.2.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.8",
    "typescript": "^4.1"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "**/*.spec.ts",
    "require": [
      "ts-node/register",
      "test.mocha.ts"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
