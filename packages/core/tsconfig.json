{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./lib",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "target": "es2019",
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true
  },
  "exclude": ["lib"],
  "include": ["src/**/*.ts"]
}
