{
  "type": "object",
  "properties": {
    "environments": {
      "type": "object",
      "patternProperties": {
        "^[a-z0-9-]+$": {
          "type": "string",
          "properties": {
            "network_id": {
              "type": "string"
            },
            "channel_contract_deploy_block": {
              "type": "integer"
            },
            "token_contract_address": {
              "type": "string"
            },
            "channels_contract_address": {
              "type": "string"
            },
            "minted_token_receiver_address": {
              "type": "string"
            },
            "xhopr_contract_address": {
              "type": "string"
            },
            "boost_contract_address": {
              "type": "string"
            },
            "stake_contract_address": {
              "type": "string"
            },
            "network_registry_proxy_contract_address": {
              "type": "string"
            },
            "network_registry_contract_address": {
              "type": "string"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "network_id",
            "channel_contract_deploy_block",
            "token_contract_address",
            "channels_contract_address",
            "network_registry_contract_address",
            "tags"
          ],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "networks": {
      "type": "object",
      "patternProperties": {
        "^[a-z0-9]+$": {
          "type": "string",
          "properties": {
            "description": {
              "type": "string"
            },
            "live": {
              "type": "boolean"
            },
            "chain_id": {
              "type": "integer"
            },
            "hardhat_deploy_gas_price": {
              "type": "string",
              "description": "Gas price as either a number string '11' or a value which should be converted like '1 gwei'. Used in hardhat-deploy plugin."
            },
            "max_fee_per_gas": {
              "type": "string",
              "description": "Max fee per gas as either a number '11' or a value which should be converted like '1 gwei'."
            },
            "max_priority_fee_per_gas": {
              "type": "string",
              "description": "Max priority fee per gas as either a number '11' or a value which should be converted like '1 gwei'."
            },
            "default_provider": {
              "type": "string"
            },
            "etherscan_api_url": {
              "type": "string"
            },
            "native_token_name": {
              "type": "string",
              "description": "API for contract verification through etherscan"
            },
            "hopr_token_name": {
              "type": "string"
            }
          },
          "required": [
            "chain_id",
            "default_provider",
            "description",
            "hardhat_deploy_gas_price",
            "max_fee_per_gas",
            "max_priority_fee_per_gas",
            "hopr_token_name",
            "native_token_name"
          ],
          "additionalProperties": false
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["environments", "networks"]
}
