{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strict": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "typeRoots": ["src/@types", "node_modules/@types", "../../node_modules/@types"]
